{
  "version": 2,
  "builds": [
    {
      "src": "backend/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "backend/src/**/*",
          "backend/data/**/*"
        ]
      }
    },
    {
      "src": "frontend/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/frontend/index.html"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|html))$",
      "dest": "/frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/backend/index.js"
    }
  ]
}